{
  "name": "sim",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "build": "npm run changeEnvironmentFileNames && ng build --aot --optimization",
    "watch": "ng build --watch --configuration development",
    "serve:ssr:SIM": "node dist/SIM/server/server.mjs",
    "lint": "biome",
    "lint:fix": "biome check --fix",
    "format": "prettier --write .",
    "changeEnvironmentFileNames": "node ./scripts/change-environment-file-names.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --runInBand"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "18.2.0",
    "@angular/common": "18.2.0",
    "@angular/compiler": "18.2.0",
    "@angular/core": "18.2.0",
    "@angular/forms": "18.2.0",
    "@angular/platform-browser": "18.2.0",
    "@angular/platform-browser-dynamic": "18.2.0",
    "@angular/platform-server": "18.2.0",
    "@angular/router": "18.2.0",
    "@angular/ssr": "18.2.10",
    "express": "4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@testing-library/angular": "17.4.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "29.5.14",
    "@angular-devkit/build-angular": "18.2.10",
    "@angular/cli": "18.2.10",
    "@angular/compiler-cli": "18.2.0",
    "@biomejs/biome": "1.9.4",
    "@types/express": "4.17.17",
    "@types/node": "18.18.0",
    "typescript": "5.5.2",
    "jest": "29.7.0",
    "jest-preset-angular": "14.6.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": ["<rootDir>/setup-jest.ts"]
  },
  "module": "index.ts",
  "type": "module"
}
